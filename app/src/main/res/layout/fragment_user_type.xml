<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/user_type_root_view"
        tools:context=".onboarding.OnboardingActivity"
        android:background="@color/white">

        <include
            android:id="@+id/secondupperpart"
            layout="@layout/secondupperpart"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/choose_admin_button"
            android:layout_width="160dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/gradientbhagwa"
            android:text="@string/Admin"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/choose_admin_image"
            app:layout_constraintStart_toStartOf="@+id/choose_admin_image"
            app:layout_constraintTop_toBottomOf="@+id/choose_admin_image" />

        <Button
            android:id="@+id/choose_user_button"
            android:layout_width="160dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/gradientbhagwa"
            android:text="@string/User"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/choose_user_image"
            app:layout_constraintStart_toStartOf="@+id/choose_user_image"
            app:layout_constraintTop_toBottomOf="@+id/choose_user_image" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/SelectProfile"
            android:textColor="#050505"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/secondupperpart"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/secondupperpart"
            app:layout_constraintTop_toBottomOf="@+id/secondupperpart" />

        <ImageView
            android:id="@+id/choose_admin_image"
            android:layout_width="194dp"
            android:layout_height="157dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="@+id/choose_user_image"
            app:layout_constraintStart_toEndOf="@+id/choose_user_image"
            app:layout_constraintTop_toTopOf="@+id/choose_user_image"
            app:srcCompat="@drawable/maleavatar_removebg_preview" />

        <ImageView
            android:id="@+id/choose_user_image"
            android:layout_width="161dp"
            android:layout_height="132dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="96dp"
            app:layout_constraintEnd_toEndOf="@+id/textView22"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="@+id/secondupperpart"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:srcCompat="@drawable/femaleavatar_removebg_preview" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
